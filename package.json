{
  "name": "twitch-chat-bot",
  "version": "1.3.0",
  "description": "",
  "scripts": {
    "build": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon build/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "start": "NODE_ENV=production npm run serve",
    "serve": "node build/index.js",
    "bump": "standard-version --skip.tag",
    "release": "git flow release start `sh scripts/nextver.sh`",
    "publish": "git flow release finish `sh scripts/ver.sh`",
    "lint": "tsc --noEmit && eslint . --quiet --fix --ext .ts",
    "test": "jest --coverage"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/concurrently": "^6.2.1",
    "@types/jest": "^26.0.24",
    "@types/tmi.js": "^1.7.2",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.2.4",
    "concurrently": "^6.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "fs": "0.0.1-security",
    "path": "^0.12.7",
    "tmi.js": "^1.8.3"
  }
}
